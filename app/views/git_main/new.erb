<h1><%= l(:label_plugin_git_registration) %></h1>

<% form_for :git_table, @git_user, :url => {:action => "create"} do |f| %>
    <%= render 'shared/error_messages' %>
    <div class="field">
      <%= f.label :git_login %>
      <br/>
      <%= f.text_field :git_login %>
    </div>
    <div class="field">
      <%= f.label :git_firstname %>
      <br/>
      <%= f.text_field :git_firstname %>
    </div>
    <div class="field">
      <%= f.label :git_lastname %>
      <br/>
      <%= f.password_field :git_lastname %>
    </div>
    <div class="actions">
      <%= f.submit l(:label_plugin_git_button_create) %>
    </div>
<% end %>