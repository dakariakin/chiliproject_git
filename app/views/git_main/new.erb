<h1><%= l(:label_plugin_git_registration) %></h1>

<% form_for :git_user, @git_user, :url => {:action => "create"} do |f| %>
    <%= render 'shared/error_messages' %>
    <div class="field">
      <%= f.label :login %>
      <br/>
      <%= f.text_field :login %>
    </div>
    <div class="field">
      <%= f.label :firstname %>
      <br/>
      <%= f.text_field :firstname %>
    </div>
    <div class="field">
      <%= f.label :lastname %>
      <br/>
      <%= f.text_field :lastname %>
    </div>
    <div class="actions">
      <%= f.submit l(:label_plugin_git_button_create) %>
    </div>
<% end %>